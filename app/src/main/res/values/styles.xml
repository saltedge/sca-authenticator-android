<resources>
    <!--COMMON-->
    <style name="KeypadAction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_100_and_grey_40</item>
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/selector_keypad_action</item>
    </style>

    <style name="BlueButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/selector_blue_button</item>
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:elevation">@dimen/dp_40</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LargeBlueButton" parent="BlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp_58</item>
        <item name="android:layout_marginEnd">@dimen/dp_58</item>
    </style>

    <style name="WhiteButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/dark_100_and_grey_40</item>
        <item name="android:background">@drawable/selector_white_button</item>
        <item name="android:elevation">@dimen/dp_30</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteLinkAction" parent="Text14BlueMedium">
        <item name="android:layout_width">@dimen/dp_180</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_bg_button_white_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Title22" parent="Text22Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_32</item>
        <item name="android:layout_marginEnd">@dimen/dp_32</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Title24" parent="Text24Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_32</item>
        <item name="android:layout_marginEnd">@dimen/dp_32</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Description18" parent="Text18Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_32</item>
        <item name="android:layout_marginEnd">@dimen/dp_32</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">5</item>
    </style>

    <!--CONNECTIONS LIST-->
    <style name="ConnectionLogoImage">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/grey_light_extra_and_dark_100</item>
        <item name="android:contentDescription">@string/connections_feature_title</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <!--DIALOG BUTTONS-->
    <style name="DialogBaseButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary_and_primary_light</item>
    </style>

    <style name="DialogRedButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_and_red_light</item>
    </style>

    <style name="AppBarActionContainer">
        <item name="android:layout_width">@dimen/action_bar_bottom_section_size</item>
        <item name="android:layout_height">@dimen/action_bar_bottom_section_size</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppBarActionImage">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--CONSENTS-->
    <style name="ConsentSharedLabel" parent="Text14Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/shape_radius12_white_and_dark_100</item>
        <item name="android:textColor">@color/dark_80_and_grey_100</item>
    </style>

    <style name="ConsentExpiresLabel" parent="Text14Secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_80_and_grey_100</item>
    </style>
</resources>
