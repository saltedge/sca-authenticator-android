<resources>
    <!--COMMON-->
    <style name="PinpadAction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BlueButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/button_color_selector</item>
        <item name="android:elevation">@dimen/dp_4</item>
    </style>

    <style name="BlueFullWidthButton" parent="BlueButton">
        <item name="android:layout_width">@dimen/dp_180</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WhiteButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:backgroundTint">@color/authorization_header_view_background</item>
        <item name="android:elevation">@dimen/dp_4</item>
    </style>

    <style name="WhiteLinkAction" parent="Text14BlueMedium">
        <item name="android:layout_width">@dimen/dp_180</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_bg_button_white_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FullDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <!--SETUP SCREEN-->
    <style name="SetupLogoImage">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">@dimen/dp_100</item>
        <item name="android:layout_marginTop">@dimen/dp_46</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SetupSkipAction" parent="@style/WhiteLinkAction">
        <item name="android:layout_marginBottom">@dimen/dp_40</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/actions_skip</item>
    </style>

    <!--BANKS LIST-->
    <style name="ConnectionLogoImage">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
