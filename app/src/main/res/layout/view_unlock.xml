<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/appLogoView"
        android:layout_width="@dimen/splash_logo_image_size"
        android:layout_height="@dimen/splash_logo_image_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_76"
        android:src="@drawable/ic_app_logo" />

    <com.saltedge.authenticator.widget.passcode.PasscodeInputView
        android:id="@+id/passcodeInputView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_115" />
</LinearLayout>
