<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        style="@style/SetupLogoImage"
        android:contentDescription="@string/onboarding_allow_notifications_title"
        android:src="@drawable/ic_setup_notifications"/>

    <Button
        android:id="@+id/allowNotificationsActionView"
        style="@style/BlueFullWidthButton"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_above="@+id/skipNotificationsActionView"
        android:layout_centerHorizontal="true"
        android:text="@string/onboarding_allow_notifications_title" />

    <TextView
        android:id="@+id/skipNotificationsActionView"
        style="@style/SetupSkipAction" />
</RelativeLayout>