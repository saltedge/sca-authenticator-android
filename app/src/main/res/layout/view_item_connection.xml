<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/dp_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toEndOf="@+id/logoImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleView"
                style="@style/Text16BlackRegular"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:maxLines="1"
                tools:text="Demobank" />

            <TextView
                android:id="@+id/subTitleView"
                style="@style/Text14GrayDarkRegular"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                tools:text="Connected on 12 sept. 2019, 18:02" />
        </LinearLayout>

        <com.saltedge.authenticator.features.connections.common.RoundedImageView
            android:id="@+id/logoImageView"
            style="@style/ConnectionLogoImage"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
