<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16">

    <TextView
        android:id="@+id/titleView"
        style="@style/Text20BlackRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:maxLines="2"
        android:text="@string/actions_confirm" />

    <TextView
        android:id="@+id/descriptionView"
        style="@style/Text14Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_32"
        android:maxLines="2"
        android:text="@string/actions_enter_passcode" />

    <com.saltedge.authenticator.widget.passcode.PasscodeInputView
        android:id="@+id/passcodeInputView"
        android:layout_width="match_parent"
        android:layout_height="440dp" />
</LinearLayout>
