<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_420"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_12"
    android:transitionGroup="true">

    <RelativeLayout
        android:id="@+id/paymentCardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_rect_white_ripple"
        android:elevation="@dimen/dp_4">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/connectionLogoView"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_4"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/connectionNameView"
                style="@style/Text14GrayRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1" />

            <TextView
                android:id="@+id/timerTextView"
                style="@style/Text14CyanMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <com.saltedge.authenticator.widget.radialprogress.RadialProgressView
                android:id="@+id/progressView"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_24"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_36">

            <ProgressBar
                android:id="@+id/progressBarView"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:indeterminate="true"
                android:indeterminateTint="@color/cyan"
                android:indeterminateTintMode="src_in"
                android:visibility="gone" />

            <TextView
                android:id="@+id/titleTextView"
                style="@style/Text20BlackMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/Text16GrayDarkRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="left"
                android:maxLines="6" />

            <TextView
                android:id="@+id/detailsActionView"
                style="@style/Text14BlueMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dp_16"
                android:text="@string/actions_view_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_24">

            <Button
                android:id="@+id/negativeActionView"
                style="@style/WhiteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/actions_deny" />

            <Button
                android:id="@+id/positiveActionView"
                style="@style/BlueButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/actions_allow" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
