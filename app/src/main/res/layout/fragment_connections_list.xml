<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_container_bg">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/connectionsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <com.saltedge.authenticator.widget.InfoView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:iconDimension="@dimen/info_view_big_icon"
        app:iconSrc="@drawable/ic_no_connections_80dp"
        app:mainActionText="@string/actions_connect_provider"
        app:subTitleText="@string/connections_list_no_connections_description"
        app:titleText="@string/connections_list_no_connections" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/connectionsFabView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_16"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/blue"
        app:borderWidth="0dp"
        app:elevation="@dimen/dp_4"
        app:fabSize="normal" />
</RelativeLayout>
