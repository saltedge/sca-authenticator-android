<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <ProgressBar
        android:id="@+id/progressBarView"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_72"
        android:indeterminate="true"
        android:indeterminateTint="@color/color_secondary"
        android:indeterminateTintMode="src_in" />

    <TextView
        android:id="@+id/titleView"
        style="@style/Text20BlackMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/connect_status_in_progress" />

    <TextView
        style="@style/Text16GrayDarkRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/connect_status_in_progress_description" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/fragment_connect_processing_footer" />
</LinearLayout>
