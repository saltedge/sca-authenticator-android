<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_marginTop="@dimen/dp_72"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="@dimen/info_view_small_icon"
        android:layout_height="@dimen/info_view_small_icon"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleView"
        style="@style/Text20BlackMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:gravity="center_horizontal"
        android:maxLines="3"
        tools:text="Title text view" />

    <TextView
        android:id="@+id/subTitleView"
        style="@style/Text16GrayDarkRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_32"
        android:gravity="center_horizontal"
        tools:text="Subtitle text view" />

    <Button
        android:id="@+id/mainActionView"
        style="@style/BlueFullWidthButton"
        android:layout_marginTop="@dimen/dp_32"
        tools:text="Button"
        tools:textColor="@android:color/white" />

    <TextView
        android:id="@+id/altActionView"
        style="@style/WhiteLinkAction"
        android:layout_marginTop="@dimen/dp_20" />
</LinearLayout>
