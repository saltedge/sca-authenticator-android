<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_15">

    <ImageView
        android:id="@+id/firstItemView"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/secondItemView"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/firstItemView"
        android:scaleType="center"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/thirdItemView"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/secondItemView"
        android:scaleType="center"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_widthPercent="25%" />

    <ImageView
        android:id="@+id/fourthItemView"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/thirdItemView"
        android:scaleType="center"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_widthPercent="25%" />
</androidx.percentlayout.widget.PercentRelativeLayout>
